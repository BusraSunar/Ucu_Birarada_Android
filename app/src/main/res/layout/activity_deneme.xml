<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".denemeActivity">


    <Button
        android:id="@+id/forestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/BeachButton"
        android:layout_centerHorizontal="true"
        android:onClick="goToForestScene"
        android:text="Beach"/>
    <Button
        android:id="@+id/BeachButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="goToBeachScene"
        android:text="forest"/>
    <Button
        android:id="@+id/snowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/BeachButton"
        android:onClick="goToSnowScene"
        android:text="Snow"/>


</RelativeLayout>